@model (List<Product> Products, ProductCategories)
@{
    var category = Model.Item2 switch
    {
        ProductCategories.SSD => "SSD",
        ProductCategories.HDD => "HDD",
        ProductCategories.RAM => "Оперативная память",
        ProductCategories.Motherboards => "Материнские платы",
        ProductCategories.Processors => "Процессоры",
        ProductCategories.PowerSupplies => "Блоки питания",
        ProductCategories.GraphicCards => "Видеокарты",
        _ => "Неизвестная категория"
    };

    ViewData["Title"] = category;
}

@* Карусель *@
<div id="carouselExampleAutoplaying" class="carousel slide mb-3" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/carousel/1.png" class="d-block w-100" alt="AMD">
        </div>
        <div class="carousel-item">
            <img src="~/img/carousel/2.jpg" class="d-block w-100" alt="NVidia">
        </div>
        <div class="carousel-item">
            <img src="~/img/carousel/3.jpg" class="d-block w-100" alt="DDR5">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предыдущий</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следующий</span>
    </button>
</div>

<section class="container d-flex flex-column">
    <h2>@category</h2>
    <hr class="border-brown" />

    <div class="container">
        <div class="row gx-3">
            @* Генерация карт товаров *@
            @{
                if (Model.Products.Count == 0)
                {
                    <p>В данной категории товары отсутствуют</p>
                    return;
                }
                @foreach (var product in Model.Products)
                {
                    <div class="card card-home col-3 d-flex flex-column">
                        <div class="card-image-container">
                            <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
                                <img class="home-card-img card-img-top" src="~/img/DefaultProductImage.png" alt="@product.Name image">
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column flex-grow-1">
                            @* Цена и иконки *@
                            <div class="row mb-2">
                                <div class="col-7">
                                    <h5 class="card-text text-blue">@product.Cost ₽</h5>
                                </div>
                                <div class="col d-flex justify-content-end align-items-center">
                                    <span class="bi bi-file-earmark-bar-graph-fill text-unactive card-icon me-2"></span>
                                    <span class="bi bi-heart-fill text-unactive card-icon"></span>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <p class="card-text card-id">ID: @product.Article</p>
                            </div>

                            <h5 class="card-title">
                                <a class="text-black" asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                            </h5>

                            <p class="card-text card-home-text flex-grow-1">
                                @{
                                    var specifications = product.Specifications.Select(spec => spec.Value);
                                    var shortInfo = string.Join(", ", specifications);
                                }
                                @shortInfo
                            </p>

                            <a class="btn btn-main mt-auto btn-card-home w-100 d-flex justify-content-center align-items-center"
                               asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id">
                                <span class="bi bi-basket-fill text-white fs-3 me-2"></span>
                                <span>В корзину</span>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
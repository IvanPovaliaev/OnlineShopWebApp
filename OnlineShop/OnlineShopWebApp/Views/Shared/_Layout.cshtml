<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShopWebApp</title>
    <link rel="stylesheet" href="/lib/itc/itc-slider.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-bar-rating/dist/themes/css-stars.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineShopWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>

    <feature name="@FeatureFlags.HappyNewYearTheme">
        @await Html.PartialAsync("_NewYearTheme");
    </feature>

    @await Html.PartialAsync("_Header")
    @await Html.PartialAsync("_Nav")

    <div class="container mb-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>                
    </div>

    @await Html.PartialAsync("~/Views/Shared/Toasts/_LoginSuccessToast.cshtml")
    @await Html.PartialAsync("~/Views/Shared/Toasts/_RegisterSuccessToast.cshtml")
    @await Html.PartialAsync("~/Views/Shared/Toasts/_UnauthorizedToast.cshtml")
    @await Html.PartialAsync("_SignInModals")
    @await Html.PartialAsync("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-bar-rating/dist/jquery.barrating.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

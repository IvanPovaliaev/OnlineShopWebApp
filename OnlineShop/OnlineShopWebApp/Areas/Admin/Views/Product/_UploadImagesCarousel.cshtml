@model List<ImageViewModel>

@* Общие свойства товара *@
<div class="row mb-3 d-flex justify-content-center">

    <div class="d-flex justify-content-center admin-product-add-image-carousel-wrapper">
        @* Карусель для предварительного просмотра изображений *@
        <div id="addProductImagesCarousel" class="carousel slide">
            <div class="carousel-inner">
                @for (int i = 0; i < Model?.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@Model[i].Url" class="admin-product-add-image" alt="Изображение товара">
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button"
                    data-bs-target="#addProductImagesCarousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Предыдущее</span>
            </button>

            <button class="carousel-control-next" type="button"
                    data-bs-target="#addProductImagesCarousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Следующее</span>
            </button>

        </div>
    </div>
</div>
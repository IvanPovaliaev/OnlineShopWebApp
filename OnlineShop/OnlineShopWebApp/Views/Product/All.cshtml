@model List<Product>
@{
    ViewData["Title"] = "Все товары";
}

@await Html.PartialAsync("_Carousel")

<section class="container d-flex flex-column">
    <h2>Все товары</h2>
    <hr class="border-brown" />

    <div class="container">
        <div class="row gx-3">
            @* Генерация карт товаров *@
            @{
                if (Model.Count == 0)
                {
                    <p>Товары отсутствуют</p>
                    return;
                }
                @foreach (var product in Model)
                {
                    <div class="card card-home col-3 d-flex flex-column">
                        <div class="card-image-container">
                            @{
                                var productImageUrl = product.ImageUrl ?? "/img/DefaultProductImage.png";
                            }
                            <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
                                <img class="home-card-img card-img-top" src="@productImageUrl" alt="@product.Name image">
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column flex-grow-1">
                            @* Цена и иконки *@
                            <div class="row mb-2">
                                <div class="col-7">
                                    <h5 class="card-text text-blue">@product.Cost ₽</h5>
                                </div>
                                <div class="col d-flex justify-content-end align-items-center">
                                    <span class="bi bi-file-earmark-bar-graph-fill text-unactive card-icon me-2"></span>
                                    <span class="bi bi-heart-fill text-unactive card-icon"></span>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <p class="card-text card-id">ID: @product.Article</p>
                            </div>

                            <h5 class="card-title">
                                <a class="text-black" asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                            </h5>

                            <p class="card-text card-home-text flex-grow-1">
                                @{
                                    var specifications = product.Specifications.Select(spec => spec.Value);
                                    var shortInfo = string.Join(", ", specifications);
                                }
                                @shortInfo
                            </p>

                            <a class="btn btn-main mt-auto btn-card-home w-100 d-flex justify-content-center align-items-center"
                               asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id">
                                <span class="bi bi-basket-fill text-white fs-3 me-2"></span>
                                <span>В корзину</span>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
@model Product
@{
    ViewData["Title"] = @Model.Name;
    var shortSpecificationsCount = 10;
    var addSpecificationFromStart = (int count) =>
    {
        @foreach (var specification in Model.Specifications.Take(count))
        {
            <li>
                <span class="text-blue">@specification.Key:</span> @specification.Value
            </li>
        }
    };

    var addSpecificationFromEnd = (int count) =>
    {
        @foreach (var specification in Model.Specifications.TakeLast(count))
        {
            <li>
                <span class="text-blue">@specification.Key:</span> @specification.Value
            </li>
        }
    };
}

<section class="container">
    <h1>@Model.Name</h1>
    <hr class="border-brown" />

    <div class="row">
        <div class="col-4">
            @{
                var productImageUrl = Model.ImageUrl ?? "/img/DefaultProductImage.png";
            }
            <img class="product-img" src="@productImageUrl" alt="@Model.Name image" />
        </div>

        <div class="col">
            <div class="row">
                <p>ID: @Model.Article</p>
            </div>
            <div class="row">
                <h3>Коротко о товаре:</h3>
                <ul class="list-unstyled">
                    @{
                        addSpecificationFromStart(shortSpecificationsCount);
                    }
                </ul>
            </div>
        </div>

        <div class="col-4 d-flex flex-column">
            <div class="product-cost text-blue mb-3 d-flex flex-column">
                @Model.Cost ₽
            </div>

            <div class="mb-3">
                <a class="btn btn-main w-100 d-flex justify-content-center align-items-center"
                   asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id">
                    <span class="bi bi-basket-fill text-white fs-3 me-2"></span>
                    В корзину
                </a>
            </div>
            <div class="d-flex justify-content-between">

                    <a class="bi bi-file-earmark-bar-graph-fill text-inactive card-icon me-2"
                    asp-area="" asp-controller="Comparison" asp-action="Add" asp-route-productId="@Model.Id">
                        <span class="text-black">Сравнить</span>
                    </a>                    



                    <a class="bi bi-heart-fill text-inactive product-page-icon me-2"
                    asp-area="" asp-controller="Favorite" asp-action="Add" asp-route-productId="@Model.Id">
                        <span class="text-black">В избранное</span>
                    </a>        

            </div>

            <a class="btn btn-main w-100 justify-content-center align-items-center mt-auto"
               asp-area="" asp-controller="Home" asp-action="Index" role="button">
                Продолжить покупки
            </a>
        </div>
    </div>

    <h2>Описание</h2>
    <hr class="border-brown" />

    <div class="row">
        <p class="text-whitespace">@Model.Description</p>
    </div>

    <h2>Характеристики</h2>
    <hr class="border-brown" />
    <div class="row">
        @{
            var rigthColumnSpecificationsCount = Model.Specifications.Count / 2;
            var leftColumnSpecificationsCount = Model.Specifications.Count - rigthColumnSpecificationsCount;
        }
        <div class="col-6">
            <ul class="list-unstyled">
                @{
                    addSpecificationFromStart(leftColumnSpecificationsCount);
                }
            </ul>
        </div>

        <div class="col-6">
            <ul class="list-unstyled">
                @{
                    addSpecificationFromEnd(rigthColumnSpecificationsCount);
                }
            </ul>

        </div>
    </div>

</section>
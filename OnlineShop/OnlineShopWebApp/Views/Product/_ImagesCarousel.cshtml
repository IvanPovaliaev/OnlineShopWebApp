@model List<ImageViewModel>

@if (Model.Count < 2)
{
    var firstImage = Model.FirstOrDefault();
    var productImageUrl = firstImage?.Url ?? "/img/DefaultProductImage.png";

    <img class="product-img" src="@productImageUrl" alt="Изображение товара" />
    return;
}

<div id="productCarousel" class="carousel carousel-dark slide mb-3" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#productCarousel"
                              data-bs-slide-to="0"
                              class="active"
                              aria-current="true"
                              aria-label="Slide 1"></button>
        @for (int i = 1; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#productCarousel"
                                  data-bs-slide-to="@i"
                                  aria-label="Slide @i+1"></button>
        }
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Model.First().Url" class="d-block w-100" alt="Изображение товара">
        </div>
        @for (int i = 1; i < Model.Count; i++)
        {
            <div class="carousel-item">
                <img src="@Model[i].Url" class="d-block w-100" alt="Изображение товара">
            </div>
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предыдущий</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следующий</span>
    </button>
</div>
@model ForgotPasswordViewModel

@* Форма восстановления пароля *@
<form method="post" id="forgotPasswordForm" asp-area="" asp-controller="Account" asp-action="ForgotPassword">
    <div class="mb-3">
        <input class="form-control input-field"
            asp-for="Email"
            placeholder="Email">
        <span asp-validation-for="Email" class="d-flex text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>
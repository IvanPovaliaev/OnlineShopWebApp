                            </svg>
                        </div>
                    </div>

                    <div class="row">
                        <p class="card-text card-id">ID: @product.Id</p>
                    </div>

                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text card-home-text">
                        @{
                            var specifications = product.Specifications.Select(spec => spec.Value);
                            var shortInfo = string.Join(", ", specifications);
                        }
                        @shortInfo
                    </p>
                    <a href="/product/index/@product.Id" class="btn btn-primary btn-card-home">В корзину</a>
                </div>

            </div>
        </div>        
    }
    </div>
</div>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

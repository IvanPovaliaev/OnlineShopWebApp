@model List<FavoriteProduct>
@{
    ViewData["Title"] = "Избранное";
}

<div class="d-flex justify-content-between">
    <div class="col-6">
        <h2>Избранное</h2>
    </div>

    <span class="col-6 d-flex align-content-center justify-content-end">
        <a class="bi bi-trash-fill trash-icon align-content-center"
           asp-area="" asp-controller="Favorite" asp-action="DeleteAll">
        </a>
    </span>
</div>

<hr class="border-brown mb-3"/>

@{
    if (Model.Count == 0)
    {
        <p>В избранном нет товаров</p>
        return;
    }
}

<div class="container">
    @await Html.PartialAsync("_FavoriteRow", Model)
</div>
<div class="col-3 d-flex align-items-center flex-column fill-height" data-bs-toggle="modal" data-bs-target="#loginModal">
    <span class="bi bi-person-fill text-blue nav-icon"></span>
    <span class="text-black">Кабинет</span>
</div>

@* Форма входа *@
<div class="modal fade" id="loginModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered w-25">
        <div class="modal-content account-modal">

            <div class="modal-header">
                <h1 class="modal-title fs-4" id="loginModalLabel">Вход</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>

            <div class="modal-body">
                <form method="post" id="loginForm" asp-controller="Account" asp-action="Login">
                    <div class="mb-3">
                        <input type="email" class="form-control input-field" name="Email" placeholder="Email" required>
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control input-field" name="Password" placeholder="Пароль" required>
                    </div>

                    <div class="form-check d-flex justify-content-center">
                        <input class="form-check-input me-2" type="checkbox" name="keepMeLogged" value="true" id="keepMeLogged">
                        <label class="form-check-label" for="keepMeLogged">
                            Запомнить меня?
                        </label>
                    </div>
                </form>
            </div>

            <div class="modal-footer d-flex flex-column">
                <button class="btn btn-main btn-login-modal w-100 mb-3" type="submit" form="loginForm">
                    Войти
                </button>
                <div class=" row align-content-center justify-content-center mb-3">
                    <span class="text-blue">Забыли пароль?</span>
                </div>
                <div class="row align-content-center justify-content-center">
                    <span class="modal-toggle" data-bs-target="#registrationModal" data-bs-toggle="modal">
                        Регистрация
                    </span>                    
                </div>
            </div>
        </div>
    </div>
</div>

@* Форма регистрации *@
<div class="modal fade" id="registrationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered w-25">
        <div class="modal-content account-modal">

            <div class="modal-header">
                <h1 class="modal-title fs-4" id="registrationModalLabel">Регистрация</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>

            <div class="modal-body">
                <form method="post" id="registrationForm" asp-controller="Account" asp-action="Register">
                    <div class="mb-3">
                        <input type="email" class="form-control input-field" name="Email" placeholder="Email*" required>
                    </div>

                    <div class="mb-3">
                        <input type="password" class="form-control input-field" name="Password" placeholder="Пароль*" required>
                    </div>

                    <div class="mb-3">
                        <input type="password" class="form-control input-field" name="ConfirmPassword" placeholder="Повторите пароль*" required>
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control input-field" name="Name" placeholder="Имя">
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control input-field" name="Phone" placeholder="Телефон">
                    </div>
                </form>
            </div>

            <div class="modal-footer d-flex flex-column">
                <button class="btn btn-main btn-login-modal w-100 mb-3" type="submit" form="registrationForm">
                    Зарегистрироваться
                </button>

                <div class="row align-content-center justify-content-center">
                    <span class="modal-toggle" data-bs-target="#loginModal" data-bs-toggle="modal">
                        У Вас уже есть аккаунт?
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
@model Dictionary<string, string>

@{
    var tryGetValue = (string key) =>
        {
            var value = string.Empty;
            Model?.TryGetValue(key, out value);

            return value;
        };
}

<div class="row d-flex justify-content-between gx-3 mb-3">
    <div class="col">
        <label for="Manufacturer" class="form-label">Производитель</label>
        <input type="text" class="form-control input-field" name="Specifications[Manufacturer]" value="@tryGetValue("Manufacturer")" required>
    </div>

    <div class="col">
        <label for="ManufacturerCode" class="form-label">Код производителя</label>
        <input type="text" class="form-control input-field" name="Specifications[ManufacturerCode]" value="@tryGetValue("ManufacturerCode")" required>
    </div>
</div>

<div class="row d-flex justify-content-between gx-3 mb-3">
    <div class="col-6">
        <label for="Power" class="form-label">Мощность</label>
        <input type="text" class="form-control input-field" name="Specifications[Power]" value="@tryGetValue("Power")" required>
    </div>

    <div class="col-6">
        <label for="PFC" class="form-label">PFC</label>
        <input type="text" class="form-control input-field" name="Specifications[PFC]" value="@tryGetValue("PFC")" required>
    </div>
</div>

<div class="row d-flex justify-content-between gx-3 mb-3">
    <div class="col-6">
        <label for="FanSize" class="form-label">Размер вентилятора</label>
        <input type="text" class="form-control input-field" name="Specifications[FanSize]" value="@tryGetValue("FanSize")" required>
    </div>    
</div>